---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
	---
<Header />

<main class="container">
  <section class="hero">
    <h1>Mitra Pengadaan Alat Olahraga Profesional</h1>
    <p>Sekolah 路 Instansi 路 Pemerintah</p>
    <a href="#kontak" class="btn">Konsultasi Pengadaan</a>
  </section>

  <section id="tentang">
    <h2>Tentang Kami</h2>
    <p>
      CV Berkah Jaya Abadi Sports adalah mitra pengadaan alat olahraga
      terpercaya untuk sekolah, universitas, dan instansi pemerintah
      di Yogyakarta dan sekitarnya.
    </p>
  </section>

  <section id="brand">
    <h2>Brand Partner</h2>
    <div class="logo-grid">
      <img src="/assets/brands/yonex.png" />
      <img src="/assets/brands/mikasa.png" />
      <img src="/assets/brands/molten.png" />
    </div>
  </section>

  <section id="klien">
    <h2>Klien Kami</h2>
    <p>Sekolah 路 Universitas 路 Instansi</p>
  </section>
</main>

<Footer />
